{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2019",
        "lib": ["es2017"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@common/*": ["./src/common/*"]
        }
    },
    "include": ["src/**/*"]
}
